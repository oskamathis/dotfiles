[user]
    email = oskamathis@gmail.com
    name = oskamathis
[core]
    excludesfile = ~/.gitignore_global
    quotepath = false
    pager = delta
[log]
    date = iso
[fetch]
    prune = true
[pull]
    rebase = false
#[pager]
#    log = diff-highlight | less
#    show = diff-highlight | less
#    diff = diff-highlight | less
#    branch = cat

[delta]
    features = side-by-side line-numbers navigate
[interactive]
    diffFilter = delta --color-only
[ghq]
    root = ~/develop/ghq
#[diff]
#    tool = vimdiff
#    algorithm = histogram
#[difftool]
#    prompt = false

[diff]
    tool = vscode
    algorithm = histogram
[difftool]
    prompt = false
[difftool "vscode"]
    cmd = '/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code' --wait --diff \"$LOCAL\" \"$REMOTE\"

#[merge]
#    tool = vimdiff
#    conflictStyle = diff3
#[mergetool]
#    prompt = false
#    keepBackup = false

[merge]
    tool = vscode
    conflictStyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "vscode"]
    # cmd = 'VSCodeのパス' \"$MERGED\"
    # 例：Macの場合
    cmd = '/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code' \"$MERGED\"
    trustExitCode = false
